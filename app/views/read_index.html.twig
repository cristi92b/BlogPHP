<div class="content pure-u-1 pure-u-md-3-4">
	<div>
		<!-- A wrapper for all the blog posts -->
		<div class="posts">
		<h1 class="content-subhead">Pinned Post</h1>
		</div>

		<div class="posts">
		<h1 class="content-subhead">Recent Posts</h1>
		{% for key,post in posts %}
			<section class="post">
			    <header class="post-header">
				<h2 class="post-title"><a href="/read/{{post.id}}">{{post.title}}</a></h2>
				<!--
				<p class="post-meta">
				    By <a class="post-author" href="#">Andrew Wooldridge</a> under <a class="post-category post-category-yui" href="#">YUI</a>
				</p>
				-->
				<p class="post-meta">
				    Created: {{post.createdTime}}
				</p>
				<p class="post-meta">
				    Last Updated: {{post.updateTime}}
				</p>
			    </header>

			    <div class="post-description">
				<p>
					{{post.content | raw}}
				</p>
			    </div>
			</section>
		{% endfor %}
		</div>
	 </div>
</div>

