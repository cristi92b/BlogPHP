<form method="post">
    <input type="hidden" name="id" value="{{post.id}}">
    Title: <input type="text" name="title" placeholder="{{post.title}}" id="title_text"> <br>
    Content: <br>
    <textarea name="content" content="{{post.content}}" id="content_text"></textarea>
    <br>
    <button type="submit" id="submit_button">Submit</button>
</form>
<div>
    <p>Post modified sucessfully! Click <a href="/posts">here</a> to return to posts.</p>
</div>
<hr>
<form action="/login/logout" method="post">
    <button type="Submit">Logout</button>
</form>

<script type="text/javascript">
CKEDITOR.replace('content_text');
</script>
