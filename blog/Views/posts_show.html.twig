<form method="post">
    <input type="hidden" name="id" value="{{post.id}}">
    Title: <input type="text" name="title" placeholder="{{post.title}}" id="title_text"> <br>
    Content: <br>
    <textarea name="content" placeholder="{{post.content}}" id="content_text"></textarea>
    <br>
    <button type="submit" id="submit_button">Submit</button>
</form>


